{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/contexts/*": [
        "contexts/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/sections/*": [
        "sections/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/interfaces/*": [
        "interfaces/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/constants/*": [
        "constants/*"
      ],
      "@/styles/*": [
        "styles/*"
      ]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
